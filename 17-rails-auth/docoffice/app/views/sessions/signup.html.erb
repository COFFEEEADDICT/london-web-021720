<h2> SIGNUP PAGE </h2>
<%= form_tag('/signup') do %>

  <%= label_tag :username %>
  <%= text_field_tag '[user]username' %>
  <br>

  <%= label_tag :password %>
  <%= password_field_tag '[user]password' %>
  <br>

  <%= label_tag :password_confirmation %>
  <%= password_field_tag '[user]password_confirmation' %>
  <br>

  <%= submit_tag 'sign up' %>
<% end %>
