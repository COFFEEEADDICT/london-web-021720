<% if flash[:errors] %>
    <% flash[:errors].each do |error|%>
      <%= error %>
    <% end%>
  <% end %>


<%= form_for @post do |f| %>
  
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :content %>
  <%= f.text_area :content, rows:20 %>

  <%= f.collection_select :destination_id, Destination.all, :id, :name, prompt: true %>
  <%= f.collection_select :blogger_id, Blogger.all, :id, :name, prompt: true %>
  <%= f.submit %>
<% end %>